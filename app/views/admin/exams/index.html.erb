<div class="pull-right">
  <%= link_to("Add an exam", new_admin_exam_path, :class => "btn btn-default") %>
</div>

<br><br>

<table class="table table-boldered">
  <% @exams.each do |exam| %>
  <tr>
    <td>
      <%= render_exam_status(exam) %>

      <%= link_to(exam.title, admin_exam_path(exam)) %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_exam_path(exam)) %>
      <%= link_to("Dsetroy", admin_exam_path(exam), :method => :delete, :data => { :confirm => "Are you sure?" }) %>

      <% if exam.is_hidden %>

        <%= link_to("Publish", publish_admin_exam_path(exam), :method => :post, :class => "btn btn-xs btn-default") %>
      <% else %>
        <%= link_to("Hide", hide_admin_exam_path(exam), :method=> :post, :class => "btn btn-xs btn-default") %>
      <% end %>
    </td>
    <td>
      <%= exam.created_at %>
    </td>
  </tr>
  <% end %>
</table>
