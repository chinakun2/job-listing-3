<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2>用户管理</h2>
  </div>
  <div class="panel-body">
    <table class="table table-boldered table-striped custab">
    <tr>
      <th>ID</th>
      <th>电子邮箱</th>
      <th>管理选项</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "修改", edit_admin_user_path(user), :class => "btn btn-xs btn-info" %>
          <%= link_to("删除", admin_user_path(user), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "确定删除吗?" }) %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
