<h1>Admin Users</h1>

<table class="table table-boldered table-striped custab">
<tr>
  <th>ID</th>
  <th>Email</th>
  <th>Actions</th>
</tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td>
      <%= link_to "Edit", edit_admin_user_path(user), :class => "btn btn-xs btn-info" %>
      <%= link_to("Destroy", admin_user_path(user), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
    </td>
  </tr>
<% end %>
</table>
